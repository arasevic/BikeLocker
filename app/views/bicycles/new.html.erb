<h2>Add a bike to your garage</h2>
<div class="container">
<%= form_for @bicycle do |f| %>
  <div class="form-group">
    <%= f.label :manufacturer %>
    <%= f.text_field :manufacturer, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :model %>
    <%= f.text_field :model, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :model_year %>
    <%= f.number_field :model_year, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :serial_number %>
    <%= f.text_field :serial_number, class: 'form-control' %>
  </div>
  <br>
  <div>
    <%= f.submit 'Create Bike', class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
</div>