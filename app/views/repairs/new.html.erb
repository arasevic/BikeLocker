<h2>Add a repair for your bicycle</h2>
<div class="container">
<%= form_for [@bicycle, @repair] do |f| %>
  <div class="form-group">
    <%= f.label :service_requested%>
    <%= f.select :service_requested, options_for_select(["Complete Over Haul", "Basic Tune Up", "Warranty Tune Up", "Wheel Build", "Front Flat Repair", "Rear Flat Repair"]), class: 'form-control'%>
  </div>
  <div class="form-group">
    <%= f.label :date_scheduled %>
    <%= f.date_select :date_scheduled, class: 'form-control' %>
  </div>
  
  <br>
  <div>
    <%= f.submit 'Create Repair', class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
</div>