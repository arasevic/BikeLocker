<h2>Edit Repair Ticket</h2>
<h4><%= "#{@repair.bicycle.model} - #{@repair.service_requested}" %></h4>

<div class="container">
<%= form_for [:admin, @repair] do |f| %>
  <div class="form-group">
    <%= f.label :date_completed %>
    <%= f.date_select :date_completed, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :performed_by %>
    <%= f.text_field :performed_by, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :notes %>
    <%= f.text_area  :notes, class: 'form-control' %>
  </div>
  
  <br>
  <div>
    <%= f.submit 'Close Repair Ticket', class: 'btn btn-primary btn-lg' %>
  </div>
<% end %>
</div>